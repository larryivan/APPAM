# OpenAI API配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo-preview

# Alternative providers (uncomment and configure as needed)
# For OpenAI
# OPENAI_API_KEY=sk-your-openai-key
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_MODEL=gpt-4-turbo-preview

# For Azure OpenAI
# OPENAI_API_KEY=your-azure-key
# OPENAI_BASE_URL=https://your-resource.openai.azure.com/
# OPENAI_MODEL=gpt-4

# For local LLM (Ollama)
# OPENAI_API_KEY=not-needed
# OPENAI_BASE_URL=http://localhost:11434/v1
# OPENAI_MODEL=llama2

# For other OpenAI-compatible APIs (like Together AI, Groq, etc.)
# OPENAI_API_KEY=your-api-key
# OPENAI_BASE_URL=https://api.together.xyz/v1
# OPENAI_MODEL=meta-llama/Llama-2-70b-chat-hf

# AI助手配置
SYSTEM_PROMPT=你是一个专业的生物信息学助手
MAX_TOKENS=1000
TEMPERATURE=0.7
STREAM_RESPONSE=true 

# 知识库配置
USE_KNOWLEDGE_BASE=true
ENABLE_ACTIVE_SEARCH=true
KNOWLEDGE_SIMILARITY_THRESHOLD=0.3

# ChromaDB配置 - 禁用遥测以解决兼容性问题
ANONYMIZED_TELEMETRY=false

# 服务器配置
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=5000 